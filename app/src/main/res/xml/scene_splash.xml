<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000">

        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                android:alpha="0"
                android:rotationY="0"
                motion:target="@id/atomSplashImageView" />

            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                android:alpha="1"
                android:rotationY="360"
                motion:target="@id/atomSplashImageView" />

            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                android:alpha="0"
                android:rotationY="0"
                motion:target="@id/atomSplashImageView" />

            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="0"
                android:alpha="0"
                motion:target="@id/flaskSplashImageView" />

            <KeyAttribute
                android:scaleX="0"
                android:scaleY="0"
                motion:framePosition="50"
                android:alpha="0"
                motion:target="@id/flaskSplashImageView" />

            <KeyAttribute
                android:scaleX="1"
                android:scaleY="1"
                motion:framePosition="100"
                android:alpha="1"
                motion:target="@id/flaskSplashImageView" />

        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/atomSplashImageView"
            android:layout_width="@dimen/atom_splash_size"
            android:layout_height="@dimen/atom_splash_size"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/flaskSplashImageView"
            android:layout_width="@dimen/flask_splash_size"
            android:layout_height="@dimen/flask_splash_size"
            motion:layout_constraintBottom_toBottomOf="@+id/atomSplashImageView"
            motion:layout_constraintTop_toTopOf="@+id/atomSplashImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/atomSplashImageView"
            android:layout_width="@dimen/atom_splash_size"
            android:layout_height="@dimen/atom_splash_size"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@id/flaskSplashImageView"
            android:layout_width="@dimen/flask_splash_size"
            android:layout_height="@dimen/flask_splash_size"
            motion:layout_constraintBottom_toBottomOf="@+id/atomSplashImageView"
            motion:layout_constraintTop_toTopOf="@+id/atomSplashImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>