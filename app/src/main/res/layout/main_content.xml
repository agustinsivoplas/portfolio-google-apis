<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainMotionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundLogoMainImageView"
        android:layout_width="@dimen/background_main_size"
        android:layout_height="@dimen/background_main_size"
        android:transitionName="backgroundTransition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_background"
        android:layout_marginTop="@dimen/view_default_margin"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/atomMainImageView"
        android:layout_width="@dimen/atom_main_size"
        android:layout_height="@dimen/atom_main_size"
        android:tint="@color/white"
        android:transitionName="atomTransition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_atom"
        android:layout_marginTop="17dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flaskMainImageView"
        android:layout_width="@dimen/flask_main_size"
        android:layout_height="@dimen/flask_main_size"
        android:tint="@color/white"
        android:transitionName="flaskTransition"
        app:layout_constraintBottom_toBottomOf="@+id/atomMainImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atomMainImageView"
        app:srcCompat="@drawable/ic_flask" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/atomicoLabsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atomico_labs"
        android:textColor="@color/primaryDarkColor"
        android:textStyle="bold"
        app:fontFamily="@font/russo_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/atomMainImageView"
        android:layout_marginTop="@dimen/view_default_margin"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/welcomeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_welcome_bg"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/backgroundMainImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/background_main_height"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/main_background" />
</androidx.constraintlayout.widget.ConstraintLayout>